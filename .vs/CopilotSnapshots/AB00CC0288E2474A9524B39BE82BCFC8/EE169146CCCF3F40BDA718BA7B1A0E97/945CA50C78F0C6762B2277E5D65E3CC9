using FluentValidation;

namespace Miski.Application.Features.Compras.CompraVehiculos.Commands.EliminarCompraDeVehiculo;

public class EliminarCompraDeVehiculoValidator : AbstractValidator<EliminarCompraDeVehiculoCommand>
{
    public EliminarCompraDeVehiculoValidator()
    {
        RuleFor(x => x.IdCompraVehiculo)
            .GreaterThan(0)
            .WithMessage("El ID del CompraVehiculo es obligatorio");

        RuleFor(x => x.IdCompra)
            .GreaterThan(0)
            .WithMessage("El ID de la Compra es obligatorio");

        RuleFor(x => x.IdUsuario)
            .GreaterThan(0)
            .WithMessage("El ID del usuario es obligatorio");
    }
}
